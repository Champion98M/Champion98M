<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Biggers" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/text_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@style/LightDatePickerDialog</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <style name="LightDatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:colorAccent">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:textColorSecondary">@color/blue</item>
        <item name="android:windowBackground">@drawable/date_picker_shape</item>
        <item name="android:buttonBarButtonStyle">@style/LightButtonStyleDatePicker</item>
    </style>

    <style name="LightButtonStyleDatePicker" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="LoginTextsInputsStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">32dp</item>
        <item name="boxCornerRadiusTopEnd">32dp</item>
        <item name="boxCornerRadiusBottomStart">32dp</item>
        <item name="boxCornerRadiusBottomEnd">32dp</item>
        <item name="boxStrokeColor">@color/darkGrey</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="materialThemeOverlay">@style/ColorButtonThemeOverlay</item>
    </style>

    <style name="ColorButtonThemeOverlay">
        <item name="colorPrimary">@color/text_color</item>
    </style>

    <style name="LogoutButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">32dp</item>
        <item name="android:textColor">@drawable/logout_button_text_color</item>
        <item name="strokeColor">@color/text_color</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources>

